# --- 1단계: React 빌드 ---
FROM node:22.12.0 AS builder
WORKDIR /usr/src/app

# package.json만 복사 후 의존성 설치 (prod 용)
COPY package.json ./
RUN npm install --only=production

# 소스 전체 복사 & 빌드
COPY . .
RUN npm run build

# --- 2단계: Nginx 실행 컨테이너 ---
FROM nginx:alpine

# Nginx 설정 덮어쓰기 (React 정적 + /api 프록시 + SSL 등)
COPY ./nginx/nginx.prod.conf /etc/nginx/conf.d/default.conf

# 빌드 산출물만 복사
COPY --from=builder /usr/src/app/build /usr/share/nginx/html

EXPOSE 80
EXPOSE 443
CMD ["nginx", "-g", "daemon off;"]